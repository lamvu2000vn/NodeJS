extends layouts/main-layout.pug

block content
    if products.length > 0
        table.table
            thead
                tr
                    th Name
                    th
            tbody
                each product in products
                    tr
                        td #{ product.name }
                        td
                            - const url = `/products/${product.id}`;
                            a.text-primary(href=url) <i class="fa-solid fa-magnifying-glass"></i>
    else
        h1 No product