extends ../layouts/main-layout
block title
    title #{product.name}
block content
    .row
        .col-6.mx-auto
            form(action="/update-product" method="POST")
                .mb-3.form-floating
                    input.form-control(type="text" id="name" name="name" placeholder="Enter product name" value=product.name)
                    label(for="name") Product name
                .mb-3.form-floating
                    input.form-control(type="price" id="price" name="price" placeholder="Enter product price" value=product.price)
                    label(for="price") Price
                input(type="text" id="id" name="id" value=product.id hidden)
                button.btn.btn-primary.w-100(type="submit") Update