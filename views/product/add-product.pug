extends ../layouts/main-layout
block title
    title Add product
block content
    .row
        .col-6.mx-auto
            form(action="/add-product" method="POST")
                .mb-3.form-floating
                    input.form-control(type="text" id="name" name="name" placeholder="Enter product name")
                    label(for="name") Product name
                .mb-3.form-floating
                    input.form-control(type="price" id="price" name="price" placeholder="Enter product price")
                    label(for="price") Price
                button.btn.btn-primary.w-100(type="submit") Update